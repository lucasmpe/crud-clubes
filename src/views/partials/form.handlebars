
<form class="mt-3" action="{{#if team}}/edit/{{team.id}}{{else}}/create{{/if}}" method="POST" enctype="multipart/form-data">

  <div class="row g-3 mb-3">
    <div class="col-sm-6">
      <input autofocus type="text" class="form-control" name="name" placeholder="Name" value="{{team.name}}">
    </div>
    <div class="col-sm">
      <input type="text" class="form-control" name="country" placeholder="Country" value="{{team.area.name}}">
    </div>
    <div class="col-sm-2">
      <input type="number" class="form-control" name="founded" placeholder="Founded" value={{team.founded}} max="2022" min="1857">
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-sm">
      <input type="text" class="form-control" name="address" placeholder="Address" value="{{team.address}}">
    </div>
    <div class="col-sm">
      <input type="tel" class="form-control" name="phone" placeholder="Phone" value="{{team.phone}}">
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-sm">
      <input type="email" class="form-control" name="email" placeholder="Email address" value={{team.email}}>
    </div>
    <div class="col-sm">
      <input type="url" class="form-control" name="website" placeholder="Website" value={{team.website}}>
    </div>
  </div>

  <div class="row g-3 mb-3 align-items-center">
    <div class="col-sm">
      <input type="text" class="form-control" name="venue" placeholder="Stadium" value="{{team.venue}}">
    </div>
    <div class="col-sm-4">
      <label for="club-colors" class="form-label align-middle me-2">Club colors</label>
      <div id="club-colors" class="d-inline">
        <input disabled type="color" class="form-control form-control-color d-inline" name="color1" value="#ffffff">
        <input disabled type="color" class="form-control form-control-color d-inline" name="color2" value="#ffffff">
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label for="shield" class="form-label">Shield</label>
    <input type="file" id="shield" class="form-control" name="shield">
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
