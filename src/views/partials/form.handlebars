{{#if data.team.crestUrl}}

<img class="shield" src={{data.team.crestUrl}} alt="">

{{/if}}


<form class="mt-3" action="{{#if data}}/edit{{else}}/create{{/if}}" method="POST" enctype="multipart/form-data">

  <div class="row g-3 mb-3">
    <div class="col-sm-6">
      <input autofocus type="text" class="form-control" name="name" placeholder="Name">
    </div>
    <div class="col-sm">
      <input type="text" class="form-control" name="country" placeholder="Country" value={{data.team.country}}>
    </div>
    <div class="col-sm-2">
      <select name="founded" class="form-select">
        {{#if data.foundedNotIsEmpty}}
        <option  selected value="{{data.team.founded}}">{{data.team.founded}}</option>
        {{else}}
        <option selected>Founded</option>
        {{/if}}
        <option value="1880">1880</option>
        <option value="1881">1881</option>
        <option value="1882">1882</option>
      </select>
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-sm">
      <input type="text" class="form-control" name="address" placeholder="Address" value="{{data.team.address}}">
    </div>
    <div class="col-sm">
      <input type="tel" class="form-control" name="phone" placeholder="Phone" value="{{data.team.phone}}">
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-sm">
      <input type="email" class="form-control" name="email" placeholder="Email address" value={{data.team.email}}>
    </div>
    <div class="col-sm">
      <input type="url" class="form-control" name="website" placeholder="Website" value={{data.team.website}}>
    </div>
  </div>

  <div class="row g-3 mb-3 align-items-center">
    <div class="col-sm">
      <input type="text" class="form-control" name="venue" placeholder="Stadium" value="{{data.team.venue}}">
    </div>
    <div class="col-sm-4">
      <label for="club-colors" class="form-label align-middle me-2">Club colors</label>
      <div id="club-colors" class="d-inline">
        <input type="color" class="form-control form-control-color d-inline" name="color1" value="#ffffff">
        <input type="color" class="form-control form-control-color d-inline" name="color2" value="#ffffff">
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label for="shield" class="form-label">Shield</label>
    <input type="file" id="shield" class="form-control" name="shield">
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>

