{{>navbar}}

<div id="club" class="container">

  <img class="shield" src="{{team.crestUrl}}" alt="">

  <table class="table table-sm table-hover caption-top">
    <caption>Info: {{team.name}}</caption>
    <tbody>
      <tr>
        <td>Country</td>
        <td>{{team.area.name}}</td>
      </tr>
      <tr>
        <td>Club colors</td>
        <td>{{team.clubColors}}</td>
      </tr>
      <tr>
        <td>Address</td>
        <td>{{team.address}}</td>
      </tr>
      <tr>
        <td>Phone</td>
        <td>{{team.phone}}</td>
      </tr>
      <tr>
        <td>Website</td>
        <td><a href="{{team.website}}">{{team.website}}</a></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><a href="{{team.email}}">{{team.email}}</a></td>
      </tr>
      <tr>
        <td>Founded</td>
        <td>{{team.founded}}</td>
      </tr>
      <tr>
        <td>Stadium</td>
        <td>{{team.venue}}</td>
      </tr>
      <tr>
        <td>Last Updated</td>
        <td>{{team.lastUpdated}}</td>
      </tr>
    </tbody>
  </table>
  <div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#team{{team.id}}">Delet</button>
    <a class="btn btn-warning" href="../edit/{{team.id}}">Edit</a>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="team{{team.id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="team{{team.id}}" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="team{{team.id}}">Warning</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete {{team.name}}?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <a class="btn btn-primary" href="../delete/{{team.id}}">Acept</a>
        </div>
      </div>
    </div>
  </div>

</div>
