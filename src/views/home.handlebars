{{>navbar}}

<div>
  <a class="btn btn-primary" href="create">Add</a>
</div>

<div id="list">
  <table class="table table-sm table-hover caption-top">
    <caption>Total teams: {{teams.length}}</caption>
    <tbody>
      {{#each teams }}
      <tr>
        <td>
          <img class="shield" src={{this.crestUrl}} alt="">
          <a href="/club/{{this.id}}" class="mx-1">{{this.name}}</a>
        </td>
        <td class="d-flex justify-content-end align-items-center">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-danger btn-sm mx-1" data-bs-toggle="modal"
            data-bs-target="#team{{this.id}}">Delet</button>
          <a href="edit/{{this.id}}" class="btn btn-warning btn-sm mx-1">Edit</a>

          <!-- Modal -->
          <div class="modal fade" id="team{{this.id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="team{{this.id}}" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="team{{this.id}}">Warning</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <p>Are you sure you want to delete {{this.name}}?</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <a class="btn btn-primary" href="delete/{{this.id}}">Acept</a>
                </div>
              </div>
            </div>
          </div>

        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
